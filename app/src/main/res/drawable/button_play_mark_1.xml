<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="150dp"
                android:height="300dp" />
        </shape>
    </item>
    <item
        android:bottom="88dp"
        android:right="-62dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/CP" />
            </shape>
        </rotate>
    </item>
    <!-- If you put a ShapeDrawable in an ImageView, its sizes will be like a real image,
     otherwise if you put it in a View as background image, its sizes won't work! -->
</layer-list>